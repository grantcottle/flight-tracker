<div class="w-full max-w-screen-xl mx-auto px-6 pt-16 pb-40 md:pb-24">

  <div class='mb-6 px-6 max-w-3xl mx-auto lg:mr-auto xl:mx-0 xl:px-12 xl:w-3/4'>
    <h1 class="flex items-center text-xl">Airports</h1>
    <div class="mt-0 mb-4 text-gray-600">
      Select a Flight
    </div>
    <hr class="mt-0 mb-4 text-gray-600">
    <%=render 'search_form' %>
  </div>

  <div class='container mx-auto px-4'>
    <div class="flex flex-col">
      <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <% if @flights %>
            <%= render 'results' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


</div>
