<% if @flights.empty? %>
<p>No Results found.</p>  
<% else %>
<table class="min-w-full">
  <thead>
    <tr>
      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Flight number</th>
      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Flight description</th>
      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
    </tr>
  </thead>
  <tbody class="bg-white">
    <% @flights.each do |flight| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= flight.flight_number %></td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= flight.description %></td>
        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= link_to 'Show', flight %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render 'pagination' %>
<% end %>
