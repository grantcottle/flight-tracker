<%= form_with url: :flights, method: :get, local: true, class:"w-full" do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class='w-full px-3'>
      <%= f.label(:origin, "From: ",  class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" ) %>
      <div class=" relative ">
        <%= f.select(:origin, options_for_select(@airport_options, params[:origin]), {}, { class:"block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class='w-full px-3'>
      <%= f.label(:destination, "Destination: ",  class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" ) %>
      <div class=" relative ">
        <%= f.select(:destination, options_for_select(@airport_options, params[:destination]), {}, { class:"block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class='w-full px-3'>
      <%= f.label(:passengers, "Passengers: ",  class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" ) %>
      <div class=" relative ">
        <%= f.select(:passengers, options_for_select((1..4).step(1)), {}, { class:"block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class='w-full px-3'>
      <%= f.label(:departure_date, "Date: ",  class:"block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" ) %>
      <div class=" relative ">
        <%= f.select(:departure_date, options_for_select(@date_options, params[:departure_date]), {include_blank: "Choose a date"}, { class:"block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
        </div>
      </div>
    </div>
  </div>
  <div class="md:flex md:items-center">
      <%= f.submit "search", class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
